---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectCard from "../../components/ProjectCard.astro";
import { getCollection } from "astro:content";

const all = await getCollection("pocs");
const sorted = all.sort((a,b) => (b.data.featured ? 1 : 0) - (a.data.featured ? 1 : 0));
---
<BaseLayout title="PoCs | MyAllSupport | IRIS Solutions">
  <section class="card" style="padding: 16px; border-radius: 22px;">
    <h1 style="font-size: 22px; margin-bottom: 6px;">PoCs y aceleradores</h1>
    <p class="muted" style="margin:0; line-height:1.7;">
      Cada PoC incluye: problema, solución, arquitectura (diagrama), stack IRIS, evidencias (clases/REST) y plan de implementación.
    </p>
  </section>

  <section style="margin-top: 14px; display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 12px;">
    {sorted.map(p => <ProjectCard p={p} />)}
  </section>
</BaseLayout>
