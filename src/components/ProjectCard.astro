---
const { p } = Astro.props;
---
<style>
  .cardx {
    padding: 14px;
    border-radius: 18px;
    display:flex;
    flex-direction:column;
    gap:10px;
    background: linear-gradient(135deg, rgba(255,255,255,0.08), rgba(255,255,255,0.02));
    border: 1px solid rgba(255,255,255,0.14);
    color: var(--text);
    text-decoration: none;
    box-shadow: 0 10px 28px rgba(0,0,0,0.26);
    transition: transform 140ms ease, box-shadow 140ms ease, border-color 140ms ease, background 140ms ease;
  }
  .cardx:hover {
    transform: translateY(-4px);
    border-color: rgba(125,211,252,0.55);
    box-shadow: 0 14px 32px rgba(0,0,0,0.32);
    background: linear-gradient(135deg, rgba(125,211,252,0.18), rgba(167,139,250,0.10));
  }
  .title { display:flex; justify-content:space-between; gap:10px; align-items:flex-start; }
  .title h3 { font-size: 16px; color: #e8f4ff; letter-spacing:-0.1px; margin:0; }
  .tags { display:flex; flex-wrap:wrap; gap: 8px; }
  .meta { font-size: 12px; color: var(--muted); }
</style>

<a class="card cardx" href={`/pocs/${p.slug}`}>
  <div class="title">
    <h3>{p.data.title}</h3>
    {p.data.featured ? <span class="pill">Featured</span> : null}
  </div>
  <div class="meta">{p.data.category} · {p.data.repoName}</div>
  <div class="tags">
    {p.data.capabilities?.slice(0,4).map((t) => <span class="pill">{t}</span>)}
  </div>
  <div class="muted" style="line-height:1.5;">{p.data.subtitle}</div>
  <span class="btn" style="width:max-content;">Abrir →</span>
</a>
